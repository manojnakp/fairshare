# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Tab indentation
[{Makefile,*.go}]
indent_size = 4
indent_style = tab

# Markdown needs trailing space
[*.md]
trim_trailing_whitespace = false

# JSON
[*.json]
indent_size = 2
indent_style = space

# Thanks to [EditorConfig](https://editorconfig.org)
